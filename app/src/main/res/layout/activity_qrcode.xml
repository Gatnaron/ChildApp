<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UUIDCodeActivity">

    <!-- Первая часть UUID -->
    <TextView
        android:id="@+id/textViewFirstPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Первая часть UUID"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Последняя часть UUID -->
    <TextView
        android:id="@+id/textViewLastPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Последняя часть UUID"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewFirstPart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Координаты -->
    <TextView
        android:id="@+id/textViewCoordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Координаты отсутствуют"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLastPart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
